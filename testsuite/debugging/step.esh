#!/usr/bin/elfsh

print Number of parameters : $#
print Param 1 : $1

cmp 2 $#
jne bad

print Parameter 1  = $1 

b $1
display 1 got $1
display 1 print Reached breakpoint at $1 !

start
step

foreach $idx of 0 until 5
 cont
forend

print Stepped 5 instructions ! 
delete 1
step
quit

bad:
print You need a parameter
quit
